.form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}

.card {
	width: 30vw;
	margin: 2rem;
}

.foaq {
	font-size: 5rem;
}

#inputEmail {
	margin-bottom: -1px;
	border-bottom-right-radius: 0;
	border-bottom-left-radius: 0;
}

#inputPassword {
	margin-bottom: 1rem;
	border-top-right-radius: 0;
	border-top-left-radius: 0;
}

.post-share {
  display: inline-block;
  text-align: center;
}

.post-share .fab {
    display: inline-block;
    vertical-align: middle;
    color: #555;
    font-size: 1.5em;
    background-color: #fff;
    height: 40px;
    line-height: 44px;
    width: 40px;
    margin: 20px 5px;
    cursor: pointer;
    background-color: transparent;
}

.share-section1 {
  position: fixed;
  top: 180px;
  border: none;
}

.share-section2 {
  padding-left: 24px !important;
  padding-right: 24px !important;
  margin: 0px !important;
  border: 0.1px solid rgba(0, 0, 0, 0.1);
  border-radius: 0rem 1rem 1rem 0rem;
  background-color: rgba(0, 0, 0, 0.1) !important;
}

.share-section3 {
  margin-top: 16px;
  margin-bottom: 24px;
}

.share-section3-content {
  position: relative;
  margin: 1rem 0;
}

.dropdown-menu {
  min-width: 20rem;
}

#tag {
  float: right;
}

.notification-unopened {
  background-color: pink;
}

#notice-wrapper {
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 999;
  background-color: rgba(135, 216, 211, 0.85);
}

#notice-wrapper .notice p {
  padding: 1rem;
  text-align: center;
  margin: 0;
  font-size: 1rem;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 2px;
}

#alert-wrapper {
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 999;
  background-color: rgba(255, 0, 0, 0.3);
}

.alert {
  padding: 1rem;
  margin: 0;
}

.alert p {
  margin: 0;
  text-align: center;
  font-size: 1rem;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 2px;
}

#s1, #s2 {
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  background-image: url('<%= asset_path("sliders/s1.png") %>');
  height: 90vh;
}

#s2 {
   background-image: url('<%= asset_path("sliders/s2.jpg") %>');
}

.container {
  max-width: 540px;
  background-color: rgba(0,0,0,0.2);
  color: grey;
}