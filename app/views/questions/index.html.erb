<!DOCTYPE html>
<html>
<head>
	<title>Question-Index</title>
</head>
<body>
	<%= render partial: '/questions/form' %>
	<h1>Question - Index</h1>
	
	<div class="text-center">
		<% @questions.each_with_index do |question, index| %>
			# : <%= index + 1 %><br/>
			Question Title : <%= question.title %><br/>
			Question Description : <%= question.description %><br/>
				<% if question.website %><br/>
		      <%= image_tag question.website.images.first, :width => "200" %><br/>
		      <%= question.website.title %><br/>
		      <%= question.website.description %><br/>
	      <% end %>
    <% end %>
	</div>

</body>
</html>