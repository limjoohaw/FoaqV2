<!DOCTYPE html>
<html>
<head>
	<title>Question-Index</title>
</head>
<body>
	<%= render partial: '/questions/form' %>
	<h1>Question - Index</h1>
	
	<div class="container">
		<div class="row justify-content-center">
			<div class="text-center">
				<% @questions.each_with_index do |question, index| %>
					<div class="card">
							<% if question.linkthumbnailer['images'].present? %>
					      <%= image_tag question.linkthumbnailer['images'].first['src'], :height => "300px" %>
				      <div class="card-body">
					      <%= question.linkthumbnailer['title'] %>
							  <%= question.linkthumbnailer['description'] %>
							</div>
				      <% end %>
							#<%= index + 1 %>
							Title : <strong><%= question.title %></strong>
							Description : <%= question.description.html_safe %>
			    </div>
		    <% end %>
			</div>
		</div>
	</div>

</body>
</html>